<Window x:Class="MazeGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="1020" Width="1020">
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <Canvas x:Name="MainCanvas" Background="Azure" Width="900" Height="900" HorizontalAlignment="Left" Margin="5"/>
        </StackPanel>
        <StackPanel Margin="0,5,0,0">
            <StackPanel Orientation="Horizontal">
                <Label x:Name="Label" Content="Size" Width="32"/>
                <TextBox x:Name="SizeTextBox" Height="22" TextWrapping="Wrap" Width="43" Text="10"/>
            </StackPanel>
            <Button x:Name="Button" Content="Generate" Width="75" Click="button_Click"/>
            <Button x:Name="SolveButton" Content="Solve It" Width="75" Margin="0,20,0,0" Click="SolveButton_Click" IsEnabled="False"/>
        </StackPanel>
    </StackPanel>
</Window>

